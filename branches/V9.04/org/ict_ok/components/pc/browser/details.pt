
<!-- $Id: details.pt_cog 424 2009-02-02 23:58:56Z markusleist $ -->

<i18n:block domain="org.ict_ok"
            tal:define="dateform python:request.locale.dates.getFormatter('date',length='full')">
    <h3 tal:condition="context/isTemplate" i18n:translate="">Personal Computer details [Template]</h3>
    <h3 tal:condition="not:context/isTemplate" i18n:translate="">Personal Computer details</h3>
    <table id="sortable" class="listing" summary="Content listing"
            i18n:attributes="summary">
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">Name</td>
            <td tal:content="context/ikName" />
        </tr>
        
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/user|nothing">
            <td i18n:translate="">User</td>
            <td tal:content="structure python: view.fsearchLink(
                    view.vocabValue('AllLdapUser',context.user),
                    context.user)" />
        </tr>
        
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="python: context.room is not None">
            <td i18n:translate="">Room</td>
            <td>
            <span tal:content="structure python: view.getHrefTitle(context.room)" />
            <div tal:omit-tag=""
                 tal:condition="python: context.room.building is not None">
                <span tal:content="structure python: '&nbsp;/&nbsp;%s' % view.getHrefTitle(context.room.building)" />
                <div tal:omit-tag=""
                     tal:condition="python: context.room.building.location is not None">
                    <span tal:content="structure python: '&nbsp;/&nbsp;%s' % view.getHrefTitle(context.room.building.location)" />
                </div>
            </div>
            </td>
        </tr>
                  
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/productionState|nothing">
           <td i18n:translate="">Production state</td>
           <td tal:content="structure python: view.fsearchLink(context.productionState)" />
       </tr>
          
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/interfaces|nothing">
            <td i18n:translate="">Interfaces</td>
            <td>
                <ul>
                    <li tal:repeat="obj context/interfaces"
                        tal:content="structure python: view.getHrefTitle(obj) +
                                     u'&nbsp;(%s)' % u'&nbsp/&nbsp;'.join(obj.ipv4List)" />
                    
                <ul>
            </td>
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/osoftwares|nothing">
            <td i18n:translate="">Operating software</td>
            <td>
                <ul>
                    <li tal:repeat="obj context/osoftwares"
                        tal:content="structure python: view.getHrefTitle(obj)" />
                    
                <ul>
            </td>
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/appsoftwares|nothing">
            <td i18n:translate="">Application software</td>
            <td>
                <ul>
                    <li tal:repeat="softw context/appsoftwares"
                        tal:content="structure python: view.getHrefTitle(softw)" />
                    
                <ul>
            </td>
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/manufacturer|nothing">
            <td i18n:translate="">Manufacturer</td>
            <td tal:content="structure python: view.fsearchLink(context.manufacturer)" />
        </tr>
        
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/vendor|nothing">
            <td i18n:translate="">Vendor</td>
            <td tal:content="structure python: view.fsearchLink(context.vendor)" />
        </tr>

       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/memsize|nothing">
           <td i18n:translate="">Memory size</td>
           <td tal:content="structure python: u'%d&nbsp;MB' % context.memsize" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/cpuType|nothing">
           <td i18n:translate="">CPU type</td>
           <td tal:content="structure python: view.fsearchLink(context.cpuType)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/hardware|nothing">
           <td i18n:translate="">Hardware</td>
           <td tal:content="structure python: view.fsearchLink(context.hardware)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/serialNumber|nothing">
           <td i18n:translate="">Serial number</td>
           <td tal:content="structure python: view.fsearchLink(context.serialNumber)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/inv_id|nothing">
           <td i18n:translate="">Inventory id</td>
           <td tal:content="structure python: view.fsearchLink(context.inv_id)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/modelType|nothing">
           <td i18n:translate="">Model type</td>
           <td tal:content="structure python: view.fsearchLink(context.modelType)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/deliveryDate|nothing">
           <td i18n:translate="">Delivery date</td>
           <td tal:content="structure python: view.fsearchLink(context.deliveryDate)" />
       </tr>
          
       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/documentNumber|nothing">
           <td i18n:translate="">Document number</td>
           <td tal:content="structure python: view.fsearchLink(context.documentNumber)" />
       </tr>



        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/ikComment|nothing">
            <td i18n:translate="">Comment</td>
            <td tal:content="context/ikComment" />
        </tr>
    </table>
</i18n:block>
