<i18n:block domain="org.ict_ok"
            tal:define="dateform python:request.locale.dates.getFormatter('date',length='full')">
    <h3 tal:condition="context/isTemplate" i18n:translate="">Network outlet Details [Template]</h3>
    <h3 tal:condition="not:context/isTemplate" i18n:translate="">Network outlet Details</h3>
    <table id="sortable" class="listing" summary="Content listing"
            i18n:attributes="summary">
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">Name</td>
            <td tal:content="context/ikName" />
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/connectorPinout|nothing">
            <td i18n:translate="">Connector pinout</td>
            <td tal:content="structure python: view.fsearchLink(context.connectorPinout)" />
        </tr>
        <!--tr tal:attributes="class view/getNextTabClass"
            tal:condition="python: context.interface is not None">
            <td i18n:translate="">Connected interface</td>
            <td>
            <span tal:content="structure python: view.getHrefTitle(context.interface)" />
            <div tal:omit-tag=""
                 tal:condition="python: context.interface.device is not None">
                <span tal:content="structure python: '&nbsp;/&nbsp;%s' % view.getHrefTitle(context.interface.device)" />
            </div>
            </td>
        </tr-->

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="python: context.room is not None">
            <td i18n:translate="">Room</td>
            <td>
            <span tal:content="structure python: view.getHrefTitle(context.room)" />
            <div tal:omit-tag=""
                 tal:condition="python: context.room.building is not None">
                <span tal:content="structure python: '&nbsp;/&nbsp;%s' % view.getHrefTitle(context.room.building)" />
                <div tal:omit-tag=""
                     tal:condition="python: context.room.building.location is not None">
                    <span tal:content="structure python: '&nbsp;/&nbsp;%s' % view.getHrefTitle(context.room.building.location)" />
                </div>
            </div>
            </td>
        </tr>

       <tr tal:attributes="class view/getNextTabClass"
           tal:condition="context/links|nothing">
           <td i18n:translate="">Connected components<br>(physical layer)</td>
           <td>
               <ul>
                   <li class="icon-generic connects"
                       tal:repeat="obj view/connectedComponentsOnPhysicalLayer"
                       tal:attributes="class python: view.getStateIconClass(obj)"
                       tal:content="structure python: view.getHrefTitle(obj, displayShort=False)" />
                   
               <ul>
           </td>
       </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/ikComment|nothing">
            <td i18n:translate="">Comment</td>
            <td tal:content="context/ikComment" />
        </tr>
    </table>
</i18n:block>
