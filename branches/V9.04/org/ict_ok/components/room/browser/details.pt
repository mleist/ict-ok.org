<i18n:block domain="org.ict_ok"
            tal:define="dateform python:request.locale.dates.getFormatter('date',length='full')">
    <h3 tal:condition="context/isTemplate" i18n:translate="">Room Details [Template]</h3>
    <h3 tal:condition="not:context/isTemplate" i18n:translate="">Room Details</h3>
    <table id="sortable" class="listing" summary="Content listing"
            i18n:attributes="summary">
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">Name</td>
            <td tal:content="context/ikName" />
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="python: context.building is not None">
            <td i18n:translate="">Building</td>
            <td tal:content="structure python: view.getHrefTitle(context.building)" />
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/devices|nothing">
            <td i18n:translate="">Devices</td>
            <td>
                <ul>
                    <li tal:repeat="obj context/devices">
                        <span tal:omit-tag=""
                              tal:content="structure python: view.getHrefTitle(obj)" />
                        <span tal:omit-tag=""
                              tal:condition="python: obj.user is not None"
                              tal:content="structure python: u'&nbsp;&nbsp;%s' % view.fsearchLink(
                                            u'(%s)' % view.vocabValue('AllLdapUser',obj.user),
                                            obj.user)" />
                    </li>
                <ul>
            </td>
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/physicalConnectors|nothing">
            <td i18n:translate="">Physical connectors</td>
            <td>
                <ul>
                    <li tal:repeat="obj context/physicalConnectors"
                        tal:content="structure python: view.getHrefTitle(obj)" />
                    
                <ul>
            </td>
        </tr>
        
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/racks|nothing">
            <td i18n:translate="">Racks</td>
            <td>
                <ul>
                    <li tal:repeat="obj context/racks"
                        tal:content="structure python: view.getHrefTitle(obj)" />
                    
                <ul>
            </td>
        </tr>
        
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/level|nothing">
            <td i18n:translate="">Level</td>
            <td tal:content="context/level" />
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/coordinates|nothing">
            <td i18n:translate="">coordinates</td>
            <td tal:content="context/coordinates" />
        </tr>
    
        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/ikComment|nothing">
            <td i18n:translate="">Comment</td>
            <td tal:content="context/ikComment" />
        </tr>
    
    </table>
</i18n:block>
