<i18n:block domain="org.ict_ok"
            tal:define="dateform python:request.locale.dates.getFormatter('dateTime',length='full')">
    <h3 i18n:translate="">X.509 Certificate Details</h3>
    <table id="sortable" class="listing" summary="Content listing"
            i18n:attributes="summary">
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">Name</td>
            <td tal:content="context/ikName" />
        </tr>
        

        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getSubject</td>
            <td tal:content="context/getSubject" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getIssuerName</td>
            <td tal:content="context/getIssuerName" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getSerialNumber</td>
            <td tal:content="context/getSerialNumber" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getSignatureAlgorithm</td>
            <td tal:content="context/getSignatureAlgorithm" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getPublicKeyAlgorithm</td>
            <td tal:content="context/getPublicKeyAlgorithm" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">Public key size</td>
            <td tal:content="python: u'%s bit' % context.getPublicKeySize()" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getVersion</td>
            <td tal:content="context/getVersion" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getValidNotBefore</td>
            <td tal:content="context/getValidNotBefore" />
        </tr>
        <tr tal:attributes="class view/getNextTabClass">
            <td i18n:translate="">getValidNotAfter</td>
            <td tal:content="context/getValidNotAfter" />
        </tr>

        <tr tal:attributes="class view/getNextTabClass"
            tal:condition="context/ikComment|nothing">
            <td i18n:translate="">Comment</td>
            <td tal:content="context/ikComment" />
        </tr>
    </table>
</i18n:block>
